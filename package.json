{
  "name": "sudo-studio",
  "version": "1.0.0",
  "private": true,
  "description": "Sudo Studio - VS Code like IDE with AI",
  "main": "electron/main.js",
  "author": "Emstrong",
  "license": "MIT",

  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run electron\"",
    "backend": "cd backend && node download-models.js && npm start",
    "frontend": "cd frontend && npm run dev",
    "electron": "cd electron && electron .",

    "build": "electron-builder --linux --publish=never"
  },

  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^26.0.12",
    "vite": "^4.5.14",
    "@vitejs/plugin-react": "^4.0.0"
  },

  "dependencies": {
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "@codemirror/basic-setup": "^0.19.1",
    "@codemirror/lang-javascript": "^0.19.1",
    "@codemirror/theme-one-dark": "^0.19.1"
  },

  "build": {
    "appId": "com.sudostudio.app",
    "productName": "Sudo Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "package.json"
    ],
    "linux": {
      "target": "AppImage"
    }
  }
}