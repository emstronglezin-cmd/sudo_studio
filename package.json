{
  "name": "sudo-studio",
  "version": "1.0.0",
  "private": true,
  "description": "Sudo Studio â€“ AI powered developer IDE",
  "author": "Emstrong Lezin",
  "main": "electron/main.js",

  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run electron\"",

    "frontend": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",

    "backend": "cd backend && node download-models.js && npm start",

    "electron": "cd electron && electron .",

    "build": "npm run frontend:build && electron-builder"
  },

  "build": {
    "appId": "com.emstrong.sudostudio",
    "productName": "Sudo Studio",

    "directories": {
      "output": "release"
    },

    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "package.json"
    ],

    "asar": true,

    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Development"
    },

    "publish": null
  },

  "devDependencies": {
    "electron": "^28.2.1",
    "electron-builder": "^26.0.12",
    "concurrently": "^8.2.2",
    "vite": "^4.5.14",
    "@vitejs/plugin-react": "^4.0.0"
  },

  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "fs-extra": "^11.3.2",

    "react": "^19.2.0",
    "react-dom": "^19.2.0",

    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",

    "@codemirror/basic-setup": "^0.19.1",
    "@codemirror/lang-javascript": "^0.19.1",
    "@codemirror/theme-one-dark": "^0.19.1"
  }
}